                <label class="flex items-center border-2 px-2 min-h-14 w-[50%] border-black/60 border-collapse">
                    <input type="radio" name="delivery-type" value="delivery" id="delivery-option" class="mr-2">
                    <span>Entrega</span>
                </label>
                <label class="flex items-center border-2 px-2 min-h-14 w-[50%] border-black/60 border-collapse">
                    <input type="radio" name="delivery-type" value="pickup" id="pickup-option" class="mr-2">
                    <span>Retirar no Restaurante</span>
                </label>
            </div>
    
